<div class="flexcolumn">
  <article class="edit-new">
    <a href="/views/dashboard.handlebars"> &larr; Back to dashboard</a>
    <h2>
      Edit Post
    </h2>
    <form class="edit-post-form">
      <div>
        <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div>
        {{!-- <input name="post-content" type="text" value="{{post.post_content}}" /> --}}
        <textarea name="post-content" type="text">{{post.post_content}}</textarea>
      </div>
      <div>
        <a href="/views/blog-post.handlebars">{{post.comments.length}}
          {{format_plural "comment" post.comments.length}}</a>
      </div>

      <button type="submit">Save post</button>
      <button type="button" class="delete-post-btn">Delete post</button>
    </form>
  </article>
  {{> comments post.comments}}
</div>




<script src="/public/js/edit-blog-post.js"></script>
<script src="/public/js/delete-blog-post.js"></script>
<script src="/public/js/comment.js"></script>